<AnchorPane prefHeight="350.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.login.LoginController">
   <children>
      <VBox prefHeight="350.0" prefWidth="480.0">
         <children>
            <Label alignment="CENTER" prefHeight="32.0" prefWidth="484.0" text="Welcome to THINGSY!" textAlignment="CENTER" textFill="#394d6f">
               <font>
                  <Font name="Century Gothic Bold" size="31.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Label>
            <AnchorPane prefHeight="231.0" prefWidth="481.0">
               <children>
                  <PasswordField fx:id="passwordField" layoutX="24.0" layoutY="115.0" />
                  <Label layoutX="24.0" layoutY="35.0" prefHeight="16.0" prefWidth="54.0" text="Email:" textFill="#677184">
                     <font>
                        <Font name="Century Gothic" size="13.0" />
                     </font>
                  </Label>
                  <Button layoutX="27.0" layoutY="202.0" mnemonicParsing="false" onAction="#onCreateAccountView" prefHeight="26.0" prefWidth="124.0" style="-fx-background-color: #3A729C;" text="Create account" textFill="WHITE">
                     <font>
                        <Font name="Century Gothic" size="13.0" />
                     </font>
                  </Button>
                  <Label layoutX="24.0" layoutY="99.0" text="Password:" textFill="#677184">
                     <font>
                        <Font name="Century Gothic" size="13.0" />
                     </font>
                  </Label>
                  <Button layoutX="27.0" layoutY="163.0" mnemonicParsing="false" onAction="#onLogIn" style="-fx-background-color: #3A729C;" text="Log in" textFill="WHITE">
                     <font>
                        <Font name="Century Gothic" size="13.0" />
                     </font>
                  </Button>
                  <TextField fx:id="emailField" layoutX="24.0" layoutY="51.0" />
                  <ImageView fitHeight="231.0" fitWidth="232.0" layoutX="235.0" opacity="0.85" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@loggogogog.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
