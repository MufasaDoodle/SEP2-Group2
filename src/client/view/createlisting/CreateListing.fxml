<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.createlisting.ListingController">
   <children>
      <Label layoutX="198.0" layoutY="24.0" text="Create Listing" textFill="#394d6f">
         <font>
            <Font name="Century Gothic Bold" size="31.0" />
         </font>
      </Label>
      <VBox layoutX="55.0" layoutY="84.0">
         <children>
            <Label text="Title" textFill="#677184">
               <font>
                  <Font name="Century Gothic" size="13.0" />
               </font></Label>
            <TextField fx:id="titleField" />
            <Label text="Description" textFill="#677184">
               <font>
                  <Font name="Century Gothic" size="13.0" />
               </font></Label>
            <TextArea fx:id="descriptionArea" prefHeight="99.0" prefWidth="200.0" wrapText="true">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextArea>
            <Label text="Category" textFill="#677184">
               <font>
                  <Font name="Century Gothic" size="13.0" />
               </font></Label>
            <ComboBox fx:id="categoryBox" prefWidth="150.0" style="-fx-background-color: white;" />
            <Label text="Location" textFill="#677184">
               <font>
                  <Font name="Century Gothic" size="13.0" />
               </font></Label>
            <TextField fx:id="locField" />
         </children>
      </VBox>
      <VBox layoutX="355.0" layoutY="84.0">
         <children>
            <Label layoutX="323.0" layoutY="70.0" text="Price" textFill="#677184">
               <font>
                  <Font name="Century Gothic" size="13.0" />
               </font></Label>
            <TextField fx:id="priceField" layoutX="323.0" layoutY="87.0" />
            <Label layoutX="314.0" layoutY="128.0" text="Duration" textFill="#677184">
               <font>
                  <Font name="Century Gothic" size="13.0" />
               </font></Label>
            <TextField fx:id="durationField" layoutX="314.0" layoutY="145.0" />
            <HBox />
            <HBox />
         </children>
      </VBox>
      <Button layoutX="377.0" layoutY="276.0" mnemonicParsing="false" onAction="#createListingBtn" style="-fx-background-color: #3A729C;" text="Create Listing" textFill="WHITE">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font></Button>
      <Button layoutX="377.0" layoutY="315.0" mnemonicParsing="false" onAction="#onSeeListing" prefHeight="26.0" prefWidth="104.0" style="-fx-background-color: #3A729C;" text="See listings" textFill="WHITE">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font></Button>
      <Label layoutX="355.0" layoutY="183.0" text="Promote:" textFill="#677184">
         <font>
            <Font name="Century Gothic" size="13.0" />
         </font></Label>
      <CheckBox fx:id="promoteBox" layoutX="421.0" layoutY="182.0" mnemonicParsing="false" />
   </children>
</AnchorPane>
