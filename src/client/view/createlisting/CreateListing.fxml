         <children>
            <Label text="Title" />
            <TextField fx:id="titleField" />
            <Label text="Description" />
            <TextArea fx:id="descriptionArea" prefHeight="99.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextArea>
            <Label text="Category" />
            <ComboBox fx:id="categoryBox" prefWidth="150.0" />
            <Label text="Location" />
            <TextField fx:id="locField" />
