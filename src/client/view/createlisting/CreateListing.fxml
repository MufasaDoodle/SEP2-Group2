      <Label layoutX="319.0" layoutY="192.0" text="Picture &lt;Upload?&gt;" />
      <Button layoutX="364.0" layoutY="361.0" mnemonicParsing="false" onAction="#onChatView" text="Debug - to chat" />
      <Button layoutX="489.0" layoutY="361.0" mnemonicParsing="false" onAction="#onSeeListing" text="See listings" />
   </children>
</AnchorPane>
